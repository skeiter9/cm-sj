@import 'vendor.styl'
@import 'mixins.styl'
color_green=#a9cf46 
/************ RESET **************/
*
	box-sizing border-box
	&:before,&:after
		box-sizing border-box


body
	color #3f3f41
a 
	text-decoration none
h1,h2,h3,h4,h5,h6
	margin 0
blockquote
	padding 0
/********************* HELPERS *************/
.bck-san-juan
	background-color #d0e0ac
.bck-header
	background-image url('../images/bg-header.jpg')
	background-position top center
	background-repeat no-repeat
.bck-header-san-juan
	background-image url('../images/bg-header-san-juan.jpg')
	background-position top center
	background-repeat no-repeat
.bck-header-productos
	background-image url('../images/bg-header-productos.jpg')
	background-position top center
	background-repeat no-repeat
.bck-header-contactanos
	background-image url('../images/bg-header-contactanos.jpg')
	background-position top center
	background-repeat no-repeat

.bck-white
	background-color #ffffff
.radius
	border-radius 15px
.text-justify
	text-align justify
.text-center
	text-align center
.text-right
	text-align right
.border 
	border 1px solid rgba(0, 0, 0, .3)
.padding
	padding 60px
.margin-top
	margin-top 10px
.img-responsive
	max-width 100%
.color-purple
	color #662c90
.color-green
	color color_green
/*********************** GRID ******************/
.container
	width 1000px
	block-center()
	clearfix() 
.row
	clearfix() 
/****************** IMAGES **************/
.img-logo
	position relative
	top 70px
	left 70px
	transition: all 0.2s ease
	&:hover
		transform scale(1.1)
.img-aside
	block-center()
	margin-top 10px
/************** NAVIGATION ****************/
.trazo
	display block
	border none
	background-image url('../images/bg-hr.png')
	height 147px
	position: absolute
	top: 202px
	background-repeat: no-repeat
	z-index: 2
	pointer-events none
.nav
	& a 
		display block
		float left
	&.social
		marging 5px 0
		padding-left 790px
		overflow hidden
		& a 
			margin-right 8%
			& span
				position: relative
				top -10px
			&.item-facebook
				&:hover
					& svg
						fill :#1E48AA
					& span
						color : #1E48AA
			&.item-twitter
				&:hover
					& svg
						fill :#01A1D1
					& span
						color : #01A1D1
		& svg
			width 18px
			fill #4b4b4d
	&.main 
		display block
		margin-top 113px
		& a 
			width (65/5)%
			margin-left .5%
			background-color #00A859
			border-radius 0 0 10px 10px
			text-align center 
			padding 45px 0 25px 0
			color white
			position: relative
			font-weight bold
			transition: all 0.2s ease
			&.current
				background-color #a8cf45
				padding 70px 0 20px 0
			&:first-child
				margin-left 33%
			&:last-child
				border-radius: 0 20px 10px 10px
				top: 20px
				padding: 25px 0 25px 0
				&:hover
					background-color #a8cf45
					padding 50px 0 20px 0
			&:hover
				background-color #a8cf45
				padding 70px 0 20px 0
/******************* APP ***************/
.padding-footer
	padding 0 20px
.padding-small
	padding 20px
.border-main
	&:before
		content ''
		display block
		position: absolute
		top: 40px
		left 1.5%
		border 1px solid rgba(0, 0, 0,.2)
		width 97%
		height 85%
